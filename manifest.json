{
  "manifest_version": 3,
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "name": "AutoKey - Shadow Access Autofill",
  "description": "Autofills web forms using company access details from an uploaded CSV.",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "identity",
    "tabs"
  ],
  "host_permissions": [
    "https://*.supabase.co/*"
  ],
  "action": {
    "default_popup": "supabase-auth.html",
    "default_icon": {
      "16": "AutoKey Icon.png",
      "48": "AutoKey Icon.png",
      "128": "AutoKey Icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.centrastage.net/csm/login/internal*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "AutoKey Icon.png",
    "48": "AutoKey Icon.png",
    "128": "AutoKey Icon.png"
  }
}